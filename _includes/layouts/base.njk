<!doctype html>
<html lang="{{ global.lang }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title ~ ' â€“ ' ~ global.title if title else global.title }}</title>
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    {% include 'snippets/meta.njk' %}
  </head>
  <body>
  
    <header class="site-header">
      <nav class="site-nav">
  <ul>
    {% for item in collections.all | eleventyNavigation %}
      <li{% if item.url == page.url %} class="active"{% endif %}>
        <a href="{{ item.url }}">{{ item.title }}</a>
        {% if item.children %}
          <ul>
            {% for child in item.children %}
              <li{% if child.url == page.url %} class="active"{% endif %}>
                <a href="{{ child.url }}">{{ child.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
      </nav>
    </header>
<div class='site-body'>
    <main class="site-main">
      {{ content | safe }}
    </main>

    {% if global.footer %}
      <footer class="site-footer">
        <p>{{ global.footer | markdownifyInline | safe }}</p>
      </footer>
    {% endif %}
</div>
  </body>
</html>
