<!doctype html>
<html lang="{{ global.lang }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title ~ ' â€“ ' ~ global.title if title else global.title }}</title>
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    {% include 'snippets/meta.njk' %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=IBM+Plex+Serif:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
   </head>
  <body>
  
    <header class="site-header">
      <nav class="site-nav">  
  {% for item in collections.all | eleventyNavigation %}
  <li{% if item.url == page.url %} class="active"{% endif %}>
    <a href="{{ item.url }}">
      {{ item.title }}
      {% if item.icon %}
        <a href="{{ item.url }}" class="nav-icon">{{ item.icon | safe }}</a>
      {% endif %}
    </a>
    {% if item.children %}
      <ul>
        {% for child in item.children %}
          <li{% if child.url == page.url %} class="active"{% endif %}>
            <a href="{{ child.url }}">
              {{ child.title }}
              {% if child.icon %}
                <a href="{{ child.url }}" class="nav-icon">{{ child.icon | safe }}</a>
              {% endif %}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </li>
{% endfor %}


</nav>

      </nav>
    </header>
<div class='site-body'>
    <main class="site-main">
      {{ content | safe }}
    </main>

    {% if global.footer %}
      <footer class="site-footer">
        <p>{{ global.footer | markdownifyInline | safe }}</p>
      </footer>
    {% endif %}
</div>
  </body>
</html>
