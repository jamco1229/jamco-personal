---
layout: base
permalink: "/projects/{{ page.fileSlug }}/index.html"
---

<article class="project">
  <h1 class="project-title">{{ title | safe }}</h1>
  <div class='column-container'>
  <div class='column-1'>
  <header class="project-header">
    <div class='spec-container'>
    <div class='spec'><h3>Role</h3><p class='project-role'>{{ role | safe}}</p></div>
    <div class='spec'><h3>Completion Date</h3><p class='project-completion-date'>{{ completionDate | safe}}</p></div>
    <div class='spec'><h3>Read Time</h3><p class='project-readtime'>{{ readTime | safe}}</p></div>
    <div class='spec'><h3>Platform</h3><p class='project-platform'>{{ platform | safe}}</p></div>
   </div>
   </div>
           {% if media %}
    {% for block in media %}
      <div class="project-block">
        {% set caption = block.caption %}
        {% include 'snippets/media.njk' %}
      </div>
    {% endfor %}
  {% endif %}
   <div class='column-2'>
    {% if content %}
      <div class="project-text">
        {{ content | safe }}
      </div>
    {% endif %}
    </div>
    </div>
  </header>
</article>

{% set next = collections.projects | nextInCollection(page.fileSlug) %}
{% set previous = collections.projects | prevInCollection(page.fileSlug) %}

{% if next or previous%}
  <div class="pagination">
    <div>
    {% if previous %}
      <a class="pagination-item pagination-item-prev" href="{{ previous.url }}">
      <p>Previous project</p>
      </a>
    {% endif %}
    </div>
    <div>
    {% if next %}
      <a class="pagination-item pagination-item-next" href="{{ next.url }}">
        <p>Next project</p>
      </a>
    {% endif %}
    </div>
  </div>
{% endif %}